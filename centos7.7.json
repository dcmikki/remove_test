{
  "builders": [
    {
      "type": "virtualbox-iso",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "2048" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ]
      ],
      "boot_command": "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>",
      "guest_os_type": "RedHat_64",
      "headless": false,
      "http_directory": "http",
      "iso_url": "CentOS-7-x86_64-Minimal-2009.iso",
      "iso_checksum_type": "sha256",
      "iso_checksum": "07b94e6b1a0b0260b94c83d6bb76b26bf7a310dc78d7a9c7432809fb9bc6194a",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "post_shutdown_delay": "15s",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "virtualbox-centos-7.9-ansible-2.9.16-guestadditions-5.2.42.box"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sudo -E bash '{{.Path}}'",
      "script": "scripts/install_epel-release.sh",
      "expect_disconnect": true
    },
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sudo -E bash '{{.Path}}'",
      "script": "scripts/update_packages.sh",
      "expect_disconnect": true
    },
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sudo -E bash '{{.Path}}'",
      "script": "scripts/setup_ansible.sh",
      "pause_before": "15s"
    },
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sudo -E bash '{{.Path}}'",
      "script": "scripts/configure_vagrant_public_key.sh"
    },
    {
      "type": "shell",
      "environment_vars": ["vbox_version={{.Version}}"],
      "execute_command": "{{.Vars}} sudo -E bash '{{.Path}}'",
      "script": "scripts/install_guest_additions.sh"
    }
  ],
  "post-processors": [
    {
      "output": "builds/{{.Provider}}-centos-7.9-ansible-2.9.16-guestadditions-5.2.42.box",
      "type": "vagrant"
    }
  ]
}